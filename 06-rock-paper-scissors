<!DOCTYPE html> 
<html> 
  <head> 
    <title>
      rock paper scissors
    </title>
  </head> 
  <body> 
    <p>
      rock paper scissors
    </p>

    <button onclick="
      //generate num btw 0 and 1
      //const creates a fixed variable
      const randomNum = Math.random();
      //let creates a variable that can later be changed
      let computerMove = '';
      //we dont use var anymore ; outdated object type?

      if (randomNum >= 0 && randomNum < 1/3 ) {
        computerMove = 'rock';
      } else if (randomNum >= 1/3 && randomNum < 2 /3) {
        computerMove = 'paper';
      } else if (randomNum >= 2/3 && randomNum < 1) {
        computerMove = 'scissors';
      };
 
      let result = '';

      if (computerMove === 'rock') {
        result = 'tie.'
      } else if (computerMove === 'paper') {
        result = 'you lose.'
      } else if (computerMove === 'scissors') {
        result = 'you win.'
      };

      alert(`you picked rock. computer picked ${computerMove}. ${result}`);
    ">
      rock
    </button>

    <button onclick="


